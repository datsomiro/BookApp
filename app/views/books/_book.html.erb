<div id="<%= dom_id book %>">
<p>
    <strong>Author:</strong>
    <%= book.author %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Year of publication:</strong>
    <%= book.year_of_publication %>
  </p>

  <p>
    <strong>Initial language:</strong>
    <%= book.initial_language %>
  </p>

  <p>
    <strong>Rating:</strong>
    <%= book.rating %>
  </p>

  <p>
    <strong>Collection:</strong>
    <%= book.collection %>
  </p>

</div>

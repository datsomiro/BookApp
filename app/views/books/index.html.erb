

<h1>Books</h1>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th></th>
        <th>Author</th>
        <th>Title</th>
        <th>Year of publication</th>
        <th>Initial language</th>
        <th>Rating</th>
        <th>Collection</th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        
        <tr>
          <td>

          </td>
          
          <td><%= book.author %></td>
          <td><%= book.title %></td>
          <td><%= book.year_of_publication %></td>
          <td><%= book.initial_language %></td>
          <td><%= book.rating %></td>
          <td><%= book.collection %></td>
          
          <td><%= link_to 'show', book, method: :shows, class:"btn btn-secondary btn-sm" %></td>
          <td><%= link_to 'Update', book, method: :update, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm" %></td>
          <td><%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-secondary btn-sm" %></td>
          
        </tr>
        
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New book', new_book_path, class:"btn btn-secondary" %>
